{
  "private": true,
  "type": "module",
  "module": "./dist/tokenize.mjs",
  "devDependencies": {
    "benchmark": "2.1.4",
    "bootstrap": "4.5.0",
    "eslint": "7.4.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-json": "2.1.1",
    "gzip-size-cli": "3.0.0",
    "postcss": "7.0.32",
    "postcss-selector-parser": "6.0.2",
    "postcss-values-parser": "3.2.1",
    "resolve": "1.17.0",
    "rollup": "2.21.0",
    "terser": "4.8.0"
  },
  "scripts": {
    "benchmark": "npm run benchmark:tokenize && npm run benchmark:parse",
    "benchmark:tokenize": "node run/benchmark.tokenize.js",
    "benchmark:parse": "node run/benchmark.parse.js",
    "build": "npm run build:tokenize && npm run build:parse",
    "build:parse": "npm run build:parse:cjs:max && npm run build:parse:cjs:min",
    "build:parse:cjs:max": "rollup src/parse.js --file dist/parse.cjs --format cjs",
    "build:parse:cjs:min": "terser dist/parse.cjs -c --output dist/parse.min.cjs",
    "build:tokenize": "npm run build:tokenize:cjs:max && npm run build:tokenize:cjs:min",
    "build:tokenize:cjs:max": "rollup src/tokenize.js --file dist/tokenize.cjs --format cjs",
    "build:tokenize:cjs:min": "terser dist/tokenize.cjs -c --output dist/tokenize.min.cjs",
    "build:tokenize:iife": "rollup src/tokenize.js --file dist/tokenize.web.cjs --format iife --name 'tokenize'",
    "lint": "eslint .",
    "postbuild:parse:cjs:min": "gzip-size dist/parse.min.cjs",
    "postbuild:tokenize:cjs:min": "gzip-size dist/tokenize.min.cjs",
    "validate": "node run/validate.tokenize.js"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:import/errors",
      "plugin:json/recommended"
    ],
    "ignorePatterns": [
      "dist",
      "hide",
      "run"
    ],
    "rules": {
      "array-bracket-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "never"
        }
      ],
      "default-case": 0,
      "func-names": [
        "error",
        "as-needed"
      ],
      "guard-for-in": 0,
      "key-spacing": [
        "error",
        {
          "align": "value"
        }
      ],
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "import/no-cycle": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "run/*.js"
          ]
        }
      ],
      "import/prefer-default-export": 0,
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreComments": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreUrls": true
        }
      ],
      "no-cond-assign": 0,
      "no-console": 0,
      "no-continue": 0,
      "no-fallthrough": 0,
      "no-irregular-whitespace": 0,
      "no-nested-ternary": 0,
      "no-multi-assign": 0,
      "no-multi-spaces": [
        "error",
        {
          "exceptions": {
            "Property": true,
            "VariableDeclarator": true
          }
        }
      ],
      "no-param-reassign": 0,
      "no-plusplus": 0,
      "no-restricted-syntax": 0,
      "no-return-assign": 0,
      "no-tabs": 0,
      "no-use-before-define": [
        "error",
        {
          "classes": false,
          "functions": false
        }
      ],
      "object-curly-newline": [
        "error",
        {
          "consistent": true,
          "multiline": true
        }
      ],
      "object-shorthand": [
        "error",
        "properties"
      ],
      "prefer-rest-params": 0,
      "quotes": [
        "error",
        "backtick"
      ],
      "semi": [
        "error",
        "never"
      ],
      "sort-imports": 0
    }
  }
}
